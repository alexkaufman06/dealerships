<h1>Add a vehicle to <%= @dealership.name() %> </h1>

<form action="/vehicles" method="post">
  <input id='dealership_id' name='dealership_id' type='hidden' value='<%= @dealership.id() %>'>
  <br>
  <label for='make'>Vehicle's make:</label>
  <input id='make' name='make' type='text' required>
  <br>
  <label for='model'>Vehicle's model:</label>
  <input id='model' name='model' type='text' required>
  <br>
  <label for='year'>Vehicle's year:</label>
  <input id='year' name='year' type='text' required>
  <br>
  <button type="submit" class="btn btn-success">Add Vehicle</button>
</form>

<h3>Here are all the cars in this dealership:</h3>

<ul>
  <% @dealership.cars().each() do |car| %>
  <li><a href="/vehicles/<%= car.id() %>"><%= car.make() %> <%= car.model() %> <%= car.year() %></a></li>
  <% end %>
</ul>

<a href="/">Return to Main Page</a>
